{
  "compilerOptions": {
    "outDir": "lib/esm",
    "module": "ESNext",
    "target": "ES5",
    "lib": ["es6","dom","es2016","es2017"],
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules","lib"]
}
